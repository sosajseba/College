@model IEnumerable<College.Models.Classroom>

@{
    ViewBag.Title = "Class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row container-fluid">
        <div class="col-3 container-fluid">
            <ul class="nav flex-column nav-pills">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    if (i == 0)
                    {
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#option-@Html.DisplayFor(modelItem => i)">
                                @Html.DisplayFor(modelItem => Model.ElementAt(i).Subject)
                            </a>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#option-@Html.DisplayFor(modelItem => i)">
                                @Html.DisplayFor(modelItem => Model.ElementAt(i).Subject)
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>

        <div class="col-9 container-fluid">
            <div class="tab-content container-fluid">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    if (i == 0)
                    {
                        <div class="container-fluid tab-pane fade show active" id="option-@i container-fluid">
                            <ul class="list-group">
                                <li class="list-group-item">Profesor: @Html.DisplayFor(modelItem => Model.ElementAt(i).ProfessorFullName)</li>
                                <li class="list-group-item">Dia: @Html.DisplayFor(modelItem => Model.ElementAt(i).Day)</li>
                                <li class="list-group-item">Inicio: @Html.DisplayFor(modelItem => Model.ElementAt(i).StartTime)</li>
                                <li class="list-group-item">Fin: @Html.DisplayFor(modelItem => Model.ElementAt(i).EndTime)</li>
                                <li class="list-group-item">Cupo: @Html.DisplayFor(modelItem => Model.ElementAt(i).Capacity)</li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="container-fluid tab-pane fade" id="option-@i">
                            <ul class="list-group">
                                <li class="list-group-item">Profesor: @Html.DisplayFor(modelItem => Model.ElementAt(i).ProfessorFullName)</li>
                                <li class="list-group-item">Dia: @Html.DisplayFor(modelItem => Model.ElementAt(i).Day)</li>
                                <li class="list-group-item">Inicio: @Html.DisplayFor(modelItem => Model.ElementAt(i).StartTime)</li>
                                <li class="list-group-item">Fin: @Html.DisplayFor(modelItem => Model.ElementAt(i).EndTime)</li>
                                <li class="list-group-item">Cupo: @Html.DisplayFor(modelItem => Model.ElementAt(i).Capacity)</li>
                            </ul>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

